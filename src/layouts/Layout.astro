---
import '../styles/fonts.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = "Bezy", description = "The Emacs of Font Editors" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-200 text-black antialiased" style="font-family: 'Bezy Grotesk', Helvetica, Arial, sans-serif;">
		<div class="border-4 border-black min-h-screen">
			<slot />
		</div>
	</body>
</html>
